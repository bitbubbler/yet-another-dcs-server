{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "lib": ["ES2021"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "build/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": ["src/"],
  "exclude": ["**/*/__tests__/**/*"]
}
